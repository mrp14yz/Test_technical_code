                url:'/',
                method: 'POST',
                data: form,
                dataType: 'JSON',
                success: function(data){
                    $('#hasil').text(data)
                }
            })
          })

          
          $('form').on('click', '#prima' , function(e){
            e.preventDefault()
            let form = $('form').serializeArray()
            form.push({ name: 'type', value: 'prima' })
            $.ajax({
                url:'/',
